<div align='center'>
  <h2>Publisher</h2>
</div>

<table border>
  <tr>
    <th>id</th>
    <th>名前</th>
    <th>かな</th>
  </tr>

  <tr>
    <form method="post" action="create">
      <td>**</td>
      <td><input type="text" name="name"></td>
      <td><input type="text" name="name_kana"></td>
      <td><input type="submit" value="登録" style='width: 80px;'></td>
    </form>
  </tr>

  <% @publishers.each do |publisher| %>
    <% if publisher == @target_publisher %>
      <tr>
        <form method="post" action="update">
          <td><%= publisher.id %></td>
          <td><input type="text" name="name" value=<%= publisher.name %>></td>
          <td><input type="text" name="name_kana" value=<%= publisher.name_kana %>></td>
          <td>
            <input type="submit" name="update" value="修正" style='width: 80px;'>
            <input type="submit" name="cancel" value="キャンセル" style='width: 80px;'>
            <input type="hidden" name="id" value="<%= publisher.id %>">
          </td>
        </form>
        <form method="post" action="del">
          <td>
            <input type="submit" value="削除" style='width: 80px;'>
            <input type="hidden" name="_method" value="delete">
            <input type="hidden" name="id" value="<%= publisher.id %>">
          </td>
        </form>
      </tr>
    <% else %>
      <tr>
        <td><%= publisher.id %></td>
        <td><%= publisher.name %></td>
        <td><%= publisher.name_kana %></td>
        <form method="get" action="edit">
          <td>
            <input type="submit" value="編集 / 削除" style='width: 80px;'>
            <input type="hidden" name="id" value="<%= publisher.id %>">
          </td>
        </form>
      </tr>
    <% end %>
  <% end %>

  <tr>
    <form method="post" action="create">
      <td>**</td>
      <td><input type="text" name="name"></td>
      <td><input type="text" name="name_kana"></td>
      <td><input type="submit" value="登録" style='width: 80px;'></td>
    </form>
  </tr>
</table>

