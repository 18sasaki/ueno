<div align='center'>
  <h2>Search</h2>
</div>


<form method="post">
  <table border>
    <tr>
      <td>ISBN</td>
      <td><input type="text" name="isbn" value=<%= @data ? @data[:isbn] : '' %>></td>
    </tr>
    <tr>
      <td colspan=2>
        <input type="submit" value="検索" style='width: 80px;'>
      </td>
    </tr>
  </table>
</form>

<% if @data %>
  <div><%= @data %></div>
  ---------------- 検索結果 ----------------
  <div id="search_result">
    <table border>
      <tr>
        <th>ISBN</th>
        <td><%= @data[:isbn] %></td>
      <tr>
        <th>タイトル</th>
        <td><%= @data[:title] %></td>
      <tr>
        <th>著者名</th>
        <td><%= @data[:author] %></td>
      <tr>
        <th>出版社</th>
        <td><%= @data[:publisher] %></td>
    </table>
  </div>
<% else %>
  <div>Please Search !!!</div>
<% end %>
