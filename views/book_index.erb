<table border>
  <tr>
    <th>id</th>
    <th>isbn</th>
    <th>名前</th>
    <th>著者</th>
    <th>出版社</th>
    <th colspan=2>ステータス</th>
  </tr>
  <% @books.each do |book| %>
    <% if book == @target_book %>
      <tr>
        <form method="post" action="update">
          <td><%= book.id %></td>
          <td><%= book.isbn %></td>
          <td>
            <input type="text" name="name" size='50' value='<%= book.name %>'>
          </td>
          <td>
            <select name="author_id">
              <option>選択してください</option>
              <% @authors.each do |author| %>
                <%= "<option value='#{author.id}' #{(author.id == book.author_id) ? 'selected' : ''}>#{author.name}</option>" %>
              <% end %>
            </select>
          </td>
          <td>
            <select name="label_id">
              <option>選択してください</option>
              <% @labels.each do |label| %>
                <%= "<option value='#{label.id}' #{(label.id == book.label_id) ? 'selected' : ''}>#{label.name}</option>" %>
              <% end %>
            </select>
          </td>
          <td colspan=2>
            <select name="status">
              <% status_hash.each_pair do |k,v| %>
                <%= "<option value='#{k}' #{(k == book.status.to_s) ? 'selected' : ''}>#{v}</option>" %>
              <% end %>
            </select>
          </td>
          <td>
            <input type="submit" name="update" value="修正" style='width: 80px;' onClick="return KanaCheck();">
            <input type="submit" name="cancel" value="キャンセル" style='width: 80px;'>
            <input type="hidden" name="id" value="<%= book.id %>">
          </td>
        </form>
        <form method="post" action="del">
          <td>
            <input type="submit" value="削除" style='width: 80px;'>
            <input type="hidden" name="_method" value="delete">
            <input type="hidden" name="id" value="<%= book.id %>">
          </td>
        </form>
      </tr>
    <% else %>
      <tr>
        <td><%= book.id %></td>
        <td><%= book.isbn %></td>
        <td><%= book.name %></td>
        <td><%= book.author.name %></td>
        <td><%= book.label.name %></td>
        <% status_str, next_id = get_status_and_next_id(book.status) %>
        <td id='book_status_<%= book.id %>'><%= status_str %></td>
        <td>
          <input type="button" name="change_status", value="※" style='width: 20px;' onClick="changeStatus(<%= book.id %>);">
          <input type="hidden" name="next_status_id", id='next_status_id_<%= book.id %>' value="<%= next_id %>">
        </td>
        <form method="get" action="edit">
          <td>
            <input type="submit" value="編集 / 削除" style='width: 80px;'>
            <input type="hidden" name="id" value="<%= book.id %>">
          </td>
        </form>
      </tr>
    <% end %>
  <% end %>
</table>

