<div align='center'>
  <h2>Author</h2>
</div>

<table border>
  <tr>
    <th align=center>検索</td>
    <th align=center>登録</td>
  </tr>
  <tr>
    <td>
      <form method="post">
        <table>
          <tr>
            <td>頭文字</td>
            <td>
              <select name="initial">
                <option value=''></option>
                <% initial_list.each do |i| %>
                  <option value=<%= i %><%= ' selected=true' if session[:author] && session[:author]['initial'] == i %>><%= i %></option>
                <% end %>
              </select>
            </td>
          </tr>
          <tr>
            <td>名前</td>
            <td><input type="text" name="name" value=<%= session[:author] && session[:author]['name'] %>></td>
          </tr>
          <tr>
            <td>性別</td>
            <td>
              <select name="sex">
                <% sex_hash.each_pair do |k,v| %>
                  <option value=<%= k %><%= ' selected=true' if session[:author] && session[:author]['sex'] == k %>><%= v %></option>
                <% end %>
              </select>
            </td>
          </tr>
          <tr><td colspan=2 align=center>
            <input type="submit" value="検索" style='width: 80px;', name='search_button'>
            <input type="submit" value="クリア" style='width: 80px;', name='clear_button'>
          </td></tr>
        </table>
      </form>
    </td>
    <td>
      <form method="post" action="create">
        <table>
          <tr>
            <td>名前</td>
            <td><input type="text" name="name" id="name"></td>
          </tr>
          <tr>
            <td>かな</td>
            <td><input type="text" name="name_kana" id="name_kana"></td>
          </tr>
          <tr>
            <td>性別</td>
            <td>
              <select name="sex">
                <% sex_hash.each_pair do |k,v| %>
                  <option value=<%= k %>><%= v %></option>
                <% end %>
              </select>
            </td>
          </tr>
          <tr><td colspan=2 align=center><input type="submit" value="登録" style='width: 80px;' onClick="return CreateCheck();"></td></tr>
        </table>
      </form>
    </td>
  </tr>
</table>

<br><br>

<table border>
  <tr>
    <th>id</th>
    <th>頭文字</th>
    <th>名前</th>
    <th>かな</th>
    <th>性別</th>
  </tr>
  <% @authors.each do |author| %>
    <% if author == @target_author %>
      <tr>
        <form method="post" action="update">
          <td><%= author.id %></td>
          <td><%= author.initial %></td>
          <td><input type="text" name="name" value=<%= author.name %>></td>
          <td><input type="text" name="name_kana" value=<%= author.name_kana %>></td>
          <td>
            <select name="sex">
              <% sex_hash.each_pair do |k,v| %>
                <%= "<option value='#{k}' #{(k == author.sex.to_s) ? 'selected' : ''}>#{v}</option>" %>
              <% end %>
            </select>
          </td>
          <td>
            <input type="submit" name="update" value="修正" style='width: 60px;' onClick="return KanaCheck();">
            <input type="submit" name="cancel" value="キャンセル" style='width: 80px;'>
            <input type="hidden" name="id" value="<%= author.id %>">
          </td>
        </form>
      </tr>
    <% else %>
      <tr>
        <td><%= author.id %></td>
        <td><%= author.initial %></td>
        <td id="disp_name"><%= author.name %></td>
        <td><%= author.name_kana %></td>
        <td><%= sex_translate(author.sex) %></td>
        <form method="get" action="edit">
          <td>
            <input type="submit" value="編集" style='width: 60px;'>
            <input type="hidden" name="id" value="<%= author.id %>">
            <input type="hidden" name="name" value="<%= params[:name] %>">
          </td>
        </form>
        <form method="post" action="del">
          <td>
            <input type="submit" value="削除" style='width: 60px;' onClick="return DeleteCheck();">
            <input type="hidden" name="_method" value="delete">
            <input type="hidden" name="id" value="<%= author.id %>">
          </td>
        </form>
      </tr>
    <% end %>
  <% end %>
</table>

